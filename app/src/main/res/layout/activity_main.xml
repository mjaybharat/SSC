<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.avs.ssc.MainActivity">

    <Button
        android:id="@+id/Science1"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="27dp"
        android:text="@string/Science1"
        app:layout_constraintEnd_toStartOf="@+id/Science2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Science2"
        android:layout_width="109dp"
        android:layout_height="49dp"
        android:layout_marginStart="27dp"
        android:layout_marginRight="112dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="112dp"
        android:text="@string/Science2"
        app:layout_constraintStart_toEndOf="@+id/Science1"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />



</android.support.constraint.ConstraintLayout>
